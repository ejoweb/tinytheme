{
	"version": 2,
	"settings": {
		"useRootPaddingAwareAlignments": true,
		"color": {
			"defaultGradients": false,
			"defaultPalette": false,
			"background": true,
			"text": true,
			"link": true,
			"palette": [
				{ "name": "Base", 	    "slug": "base", 	  "color": "#ECDFAB" },
				{ "name": "Contrast", 	"slug": "contrast",   "color": "#244734" },
				{ "name": "Primary", 	"slug": "primary",	  "color": "#A92F20" }
			],
			"custom": true,
			"gradients": [],
			"duotone": [
				{ "name": "Black and white", "slug": "black-and-white", "colors": [ "#000000", "#ffffff" ] }
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"name": "Rochester",
					"slug": "rochester",
					"fontFamily": "Rochester,ui-serif, Georgia, serif",
					"fontFace": [
						{
							"fontFamily": "Rochester",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/rochester/Rochester-Regular.woff2" ]
						}
					]
				},
				{
					"fontFamily": "Metropolis, -apple-system,BlinkMacSystemFont,\"Segoe UI\",Roboto,Oxygen-Sans,Ubuntu,Cantarell,\"Helvetica Neue\",sans-serif",
					"slug": "metropolis",
					"name": "Metropolis",
					"fontFace": [
						{
							"fontFamily": "Metropolis",
							"fontWeight": "400",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/metropolis/Metropolis-Regular.woff2" ]
						},
						{
							"fontFamily": "Metropolis",
							"fontWeight": "500",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/metropolis/Metropolis-RegularItalic.woff2" ]
						},
						{
							"fontFamily": "Metropolis",
							"fontWeight": "700",
							"fontStyle": "normal",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/metropolis/Metropolis-Bold.woff2" ]
						},
						{
							"fontFamily": "Metropolis",
							"fontWeight": "700",
							"fontStyle": "italic",
							"fontStretch": "normal",
							"src": [ "file:./assets/fonts/metropolis/Metropolis-BoldItalic.woff2" ]
						}
					]
				}
			],
			"fontSizes": [
				{ "name": "Small",    "slug": "small",    "size": "clamp(0.875rem, 1.5vw, 0.9125rem)" },
				{ "name": "Medium",   "slug": "medium",   "size": "clamp(1rem, 2vw, 1.125rem)" },
				{ "name": "Large",    "slug": "large",    "size": "clamp(1.125rem, 3vw, 1.75rem)" },
				{ "name": "X-large",  "slug": "x-large",  "size": "clamp(1.375rem, 3vw, 2.5rem)" },
				{ "name": "XX Large", "slug": "xx-large", "size": "clamp(2rem, 5vw, 4rem)" }
			],
			"customFontSize": false,
            "lineHeight": false,
            "fontStyle": true,
			"fontWeight": true,
			"dropCap": false,
            "letterSpacing": false,
            "textDecoration": true,
            "textTransform": false
		},
		"border": {
			"color": true, 
			"radius": true, 
			"style": true, 
			"width": true
		},
		"layout": {
			"contentSize": "40rem",
			"wideSize": "64rem"
		},
		"spacing": {
			"blockGap": true,
			"margin": true,
			"padding": true,
			"spacingSizes": [
				{ "name": "1", "slug": "10", "size": "clamp(0.5rem, 1.25vw, 0.5rem)" },
				{ "name": "2", "slug": "20", "size": "clamp(0.75rem, 1.25vw, 0.875rem)" },
				{ "name": "3", "slug": "30", "size": "clamp(0.875rem, 1.5vw, 1rem)" },
				{ "name": "4", "slug": "40", "size": "clamp(1rem, 2vw, 1.25rem)" },
				{ "name": "5", "slug": "50", "size": "clamp(1.33rem, 3vw, 2rem)" },
				{ "name": "6", "slug": "60", "size": "clamp(2rem, 3vw, 3rem)" },
				{ "name": "7", "slug": "70", "size": "clamp(3rem, 5vw, 3.75rem)" },
				{ "name": "8", "slug": "80", "size": "clamp(3rem, 6vw, 4.875rem)" },
				{ "name": "9", "slug": "90", "size": "clamp(3rem, 7vw, 6rem)" }
			],
			"units": [ "%",	"px", "em", "rem", "vh", "vw" ]
		},
		"custom": {
			"typography": {
				"line-height": {
					"small": 1.1,
					"normal": 1.725
				}
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--base)",
			"text": 	  "var(--wp--preset--color--contrast)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--metropolis)",
			"lineHeight": "var(--wp--custom--typography--line-height--normal)",
			"fontSize":   "var(--wp--preset--font-size--medium)"
		},
		"spacing": {
			"blockGap": "var(--wp--preset--spacing--50)",
			"padding": {
				"top": 0,
				"right": "clamp(1.5rem, 8vw, 3.5rem)",
				"bottom": 0,
				"left": "clamp(1.5rem, 8vw, 3.5rem)"
			}
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--primary)"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"typography": {
						"textDecoration": "underline"
					}
				}
			},
			"button": {
				"border": {
					"radius": "4px"
				},
				"color": {
					"background": "var(--wp--preset--color--primary)",
					"text": "var(--wp--preset--color--base)"
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				},
				":active": {
					"color": {
						"background": "var(--wp--preset--color--secondary)",
						"text": "var(--wp--preset--color--base)"
					}
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--rochester)",
					"fontWeight": "700",
					"lineHeight": "var(--wp--custom--typography--line-height--small)"
				},
				"color": {
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			}
		},
		"blocks": {
			"core/site-title": {
				"elements": {
					"link": {
						"typography": {
							"textDecoration": "none"
						}
					}
				}				
			},
			"core/post-title": {
				"elements": {
					"link": {
						"color": {
							"text": "var(--wp--preset--color--contrast)"
						},
						"typography": {
							"textDecoration": "none"
						},
						":hover": {
							"typography": {
								"textDecoration": "underline"
							}
						}
					}
				}
			},
			"core/query": {
				"elements": {
					"h2": {
						"typography": {
							"fontSize": "var(--wp--preset--font-size--large)"
						}
					}
				}
			},
			"core/columns": {
				"spacing": {
					"blockGap": "var(--wp--preset--spacing--70)"
				}
			}
		}
	},
	"customTemplates": [
		{
			"name": "404",
			"postTypes": [
				"page"
			],
			"title": "404"
		}
	],
	"templateParts": [
		{
			"area": "header",
			"name": "header",
			"title": "Header"
		},
		{
			"area": "footer",
			"name": "footer",
			"title": "Footer"
		}
	]
}
